---
import ProjectCard from "./ProjectCard.astro";
---

<section id="projects">
  <h3 class="text-2xl font-bold mb-4">Projects</h3>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h4 class="text-xl font-semibold mb-3 text-purple-400">Electronics</h4>
      <div class="space-y-4">
        <ProjectCard
          title="Smart Home Hub"
          description="IoT device management system built with React and Arduino"
          tags={["React", "Arduino", "MQTT"]}
        />
        <ProjectCard
          title="Embedded ML"
          description="Machine learning models optimized for microcontrollers"
          tags={["TensorFlow Lite", "C++", "ARM Cortex-M"]}
        />
      </div>
    </div>
    <div>
      <h4 class="text-xl font-semibold mb-3 text-purple-400">Programming</h4>
      <div class="space-y-4">
        <ProjectCard
          title="PCB Design Tool"
          description="Web-based PCB design software using WebGL and Node.js"
          tags={["WebGL", "Node.js", "Three.js"]}
        />
        <ProjectCard
          title="Digital Signal Processor"
          description="FPGA-based audio DSP with web interface"
          tags={["VHDL", "React", "Web Audio API"]}
        />
      </div>
    </div>
  </div>
</section>
