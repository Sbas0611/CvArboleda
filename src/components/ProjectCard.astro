---
const { title, description, tags = [] } = Astro.props;
---

<div
  class="bg-gray-800 border-purple-400 border transform hover:scale-105 transition-transform duration-300 p-4 rounded-lg"
>
  <h4 class="text-xl font-semibold text-purple-400">{title}</h4>
  <p class="text-gray-300 mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    {
      tags.map((tag) => (
        <span class="bg-gray-700 text-purple-400 px-2 py-1 rounded text-sm">
          {tag}
        </span>
      ))
    }
  </div>
</div>
